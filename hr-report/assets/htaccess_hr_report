# Share2Inspire HR Report - Configuração .htaccess
# Este ficheiro configura as regras de reescrita para o endpoint da API

# Ativar o módulo de reescrita
RewriteEngine On

# Regra para redirecionar /api/submit-form para o script PHP
# Aceita tanto /api/submit-form como /api/submit-form/
RewriteRule ^api/submit-form/?$ api/submit-form.php [L,QSA]

# Headers de segurança adicionais
<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always append X-Frame-Options DENY
    
    # Prevenir MIME type sniffing
    Header always set X-Content-Type-Options nosniff
    
    # Ativar proteção XSS
    Header always set X-XSS-Protection "1; mode=block"
    
    # Política de referrer restritiva
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Configurações específicas para o diretório API
<IfModule mod_rewrite.c>
    # Bloquear acesso direto a ficheiros PHP sensíveis (exceto o endpoint)
    RewriteCond %{REQUEST_FILENAME} \.php$
    RewriteCond %{REQUEST_URI} !^/api/submit-form\.php$
    RewriteCond %{REQUEST_URI} ^/api/
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

# Configurações de cache para assets estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Cache para PDFs (1 mês)
    ExpiresByType application/pdf "access plus 1 month"
    
    # Cache para CSS e JS (1 semana)
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    
    # Cache para imagens (1 mês)
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
</IfModule>

# Compressão GZIP para melhor performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Proteção contra hotlinking de assets
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?share2inspire\.pt [NC]
    RewriteCond %{REQUEST_URI} \.(pdf|zip|doc|docx)$ [NC]
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

# Bloquear acesso a ficheiros sensíveis
<FilesMatch "\.(log|txt|md)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Configurações específicas para o endpoint API
<Files "submit-form.php">
    # Permitir apenas métodos POST
    <LimitExcept POST>
        Order Allow,Deny
        Deny from all
    </LimitExcept>
</Files>

